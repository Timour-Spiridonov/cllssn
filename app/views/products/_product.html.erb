<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Sub name:</strong>
    <%= product.sub_name %>
  </p>
  <p>
    <strong>Image: </strong>
    <% if product.image.attached? %>
    <%= image_tag product.image %>
    <%end%>

  </p>

  <p>
    <strong>Brand:</strong>
    <%= product.brand %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Sizes:</strong>
    <% if product.sizes %>
    <ul>
   <% product.sizes.each do |size| %>
     <li> <%= size%></li>
    <%end%>

    </ul>
    <%end%>
  </p>

  <p>
    <strong>Stock:</strong>
    <%= product.stock %>
  </p>

</div>
